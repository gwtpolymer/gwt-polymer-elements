<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:i='urn:import:com.vaadin.polymer.iron.widget'
             xmlns:p='urn:import:com.vaadin.polymer.paper.widget'>

    <g:HTMLPanel addStyleNames="dropdown-menu-sample">
        <div class="horizontal-section-container">
            <div>
                <h4>Basic Menu</h4>
                <div class="horizontal-section">
                    <p:PaperDropdownMenu label="Dinosaurs">
                        <p:PaperListbox ui:field="menu1" addStyleNames="dropdown-content"/>
                    </p:PaperDropdownMenu>
                </div>
            </div>
        </div>

        <div class="horizontal-section-container">
            <div>
                <h4>Pre-selected Value</h4>
                <div class="horizontal-section">
                    <p:PaperDropdownMenu label="Dinosaurs">
                        <p:PaperListbox ui:field="menu2" addStyleNames="dropdown-content" selected="1"/>
                    </p:PaperDropdownMenu>
                </div>
            </div>
        </div>

        <div class="horizontal-section-container">
            <div>
                <h4>Disabled</h4>
                <div class="horizontal-section">
                    <p:PaperDropdownMenu disabled="true" label="Disabled">
                        <p:PaperListbox ui:field="menu3" addStyleNames="dropdown-content"/>
                    </p:PaperDropdownMenu>
                </div>
            </div>
        </div>

        <div class="horizontal-section-container">
            <div>
                <h4>Alternative Content</h4>
                <div class="horizontal-section">
                    <p:PaperDropdownMenu label="Menu tabs!?">
                        <p:PaperTabs ui:field="tabs1" addStyleNames="dropdown-content"/>
                    </p:PaperDropdownMenu>
                </div>
            </div>
        </div>

        <div class="horizontal-section-container">
            <div>
                <h4>No Label Float</h4>
                <div class="horizontal-section">
                    <p:PaperDropdownMenu addStyleNames="letters" label="Letters" noLabelFloat="true">
                        <p:PaperListbox ui:field="menu4" addStyleNames="dropdown-content"/>
                    </p:PaperDropdownMenu>
                </div>
            </div>
        </div>

        <div class="horizontal-section-container">
            <div>
                <h4>No Ripple, No Animations</h4>
                <div class="horizontal-section">
                    <p:PaperDropdownMenu label="Dinosaurs" noink="true" noAnimations="true">
                        <p:PaperListbox ui:field="menu5" addStyleNames="dropdown-content"/>
                    </p:PaperDropdownMenu>
                </div>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
